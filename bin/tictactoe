#!/usr/bin/env ruby

require_relative '../config/environment'


  def loop_around
  puts "Please input y or n"
  answer = gets.strip
  case answer
    when "y"
      start
    when "n"
      puts "Goodbye!"
    else
      loop_around
  end
end

def start

  puts "Welcome to Tic Tac Toe!\n " 
  puts "Choose the mode:\n
  0 - Computer VS Computer
  1 - You VS Computer
  2 - You VS Your friend"
  input = gets.strip
  
  put "lets the game begin, pick a number between 1-9" 
  
case input
    when "0"
      Game.new(Players::Computer.new("X"), Players::Computer.new("O")).play
      puts "That was fun! Would you like to play again?"
      loop_around
    when "1"
      Game.new(Players::Human.new("X"), Players::Computer.new("O"),Board.new).play
      puts "That was fun! Would you like to play again?"
      loop_around
    when "2"
      Game.new(Players::Human.new("X"), Players::Human.new("O"),Board.new).play
      puts "That was fun! Would you like to play again?"
      loop_around
    
  end 
  
end 


start 
  





